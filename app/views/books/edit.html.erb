<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<div class="form_title">
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>
<div class="form_body">
  <%= f.label :body %>
  <%= f.text_area :body%>
</div>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
<a class="back" href="/books">Back</a>
